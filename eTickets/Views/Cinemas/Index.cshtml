@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "List Of Cinmas";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-hover">
            <thead class="thead-dark">
                
                 <tr>
                    <th>@Html.DisplayNameFor(model=>model.Logo)</th>
                    <th>@Html.DisplayNameFor(model=>model.Name)</th>
                    <th>@Html.DisplayNameFor(model=>model.Description)</th>
                    <th>Actions</th>
                 </tr>
                
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" style="max-width:150px"src="@item.Logo"/>
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelitem=>item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem=>item.Description)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Actor" asp-action="">Edit 
                                <i class="fas fa-edit"></i> </a>|

                            <a class="btn btn-outline-danger" asp-controller="Actor" asp-action="">Delete
                                <i class="fa fa-trash" aria-hidden="true"></i> </a>
                        </td>

                        
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>

