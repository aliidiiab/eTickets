@model IEnumerable<Actor>
@{
    ViewData["Title"] = "List Of Actors";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-hover">
            <thead class="thead-dark">
                
                 <tr>
                    <th>@Html.DisplayNameFor(model=>model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model=>model.FullName)</th>
                    <th>@Html.DisplayNameFor(model=>model.Bio)</th>
                    <th>Actions</th>
                 </tr>
                
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" style="max-width:150px" src="@item.ProfilePictureURL"/>
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelitem=>item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem=>item.Bio)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary" 
                            asp-controller="Actors" asp-action="edit"
                            asp-route-id="@item.Id">Edit 
                                <i class="fas fa-edit"></i> </a>|

                            <a class="btn btn-outline-info" 
                            asp-controller="Actors" asp-action="Details" 
                            asp-route-id="@item.Id">Details
                                <i class="fa fa-eye" aria-hidden="true"></i> </a>|

                            <a class="btn btn-outline-danger"
                            asp-controller="Actors" asp-action="Delete"
                            asp-route-id="@item.Id">Delete
                                <i class="fa fa-trash" aria-hidden="true"></i> </a>
                        </td>

                        
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>
<div class="text-white" style="position:fixed; right:25px;bottom:25px;">
    <a class="btn btn-success" 
    asp-controller="Actors" 
    asp-action="create">Add New 
    <i class="fa fa-plus" aria-hidden="true"></i></a>
</div>
