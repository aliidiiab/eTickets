@model Producer

@{
    ViewData["Title"] = "Details";
}

<h1>Producer Details</h1>

<hr />
<div class="row">
    <div class="col-md-4 container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center">
                <img id="ProfilePicturePreview" style="width:50%;"class="border-info rounded-circle"/>
            </div>

            <div class="form-group">
                <label asp-for="ProfilePictureURL" class="control-label"></label>
                <input asp-for="ProfilePictureURL" class="form-control" readonly />
                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control"readonly />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <input asp-for="Bio" class="form-control"readonly />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a  class="btn btn-outline-primary" asp-action="Index" asp-controller="producers">Show All</a>
                <a  class="btn btn-outline-success float-right"asp-action="edit" asp-controller="producers"asp-route-id="@Model.Id" >Edit</a>

            </div>
        
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
       
    </script>
}
